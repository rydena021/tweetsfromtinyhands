    <h3>Tweets from tiny hands</h3>
  </div>
  <div id="trump-image">
    <%= image_tag "trumphands-v1.png", style: "position: absolute; bottom: 0px; right: 0px; width: 65%;"%>
  </div>
<div class="parallax">
  <%= image_tag "twitter-black.jpg"%>
</div>
</div>
