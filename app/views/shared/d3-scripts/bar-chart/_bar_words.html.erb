<h1>Top Ten Words</h1>
<div id="word-bar-1"></div>
<script>
// not setup for json

d3.json("<%= asset_path 'final/words/2015-06-01.json' %>", function(error, data) {


  var words = data.words.slice(0, 10).sort(function(a, b){return b.frequency-a.frequency});
  var categories = [''];
  var mentions = [];
  words.forEach(function(d) {
    categories.push(d.term);
    mentions.push(d.frequency);
  });

  var colors = ['#0000b4','#0082ca','#0094ff','#0d4bcf','#0066AE','#074285','#00187B','#285964','#405F83','#416545','#4D7069','#6E9985','#7EBC89','#0283AF','#79BCBF','#99C19E'];

  var xscale = d3.scale.linear()
          .domain([0, (words[0].frequency + 10)])
          .range([0,722]);

  var yscale = d3.scale.linear()
          .domain([0,11])
          .range([0,480]);

  var colorScale = d3.scale.quantize()
          .domain([0,10])
          .range(colors);

  var canvas = d3.select('#word-bar-1')
          .append('svg')
          .attr({'width':900,'height':550})


  var xAxis = d3.svg.axis();
    xAxis
      .orient('bottom')
      .scale(xscale);

  var yAxis = d3.svg.axis();
    yAxis
      .orient('left')
      .scale(yscale)
      .tickFormat(function(d,i){ return categories[i]; })

  var y_xis = canvas.append('g')
            .attr("transform", "translate(200,0)")
            .attr('id','yaxis')
            .call(yAxis);

  var x_xis = canvas.append('g')
            .attr("transform", "translate(200,480)")
            .attr('id','xaxis')
            .call(xAxis);

  var chart = canvas.append('g')
            .attr("transform", "translate(200,0)")
            .attr('id','bars')
            .selectAll('rect')
            .data(mentions)
            .enter()
            .append('rect')
            .attr('height',33)
            .attr({'x':0,'y':function(d,i){ return yscale(i)+19; }})
            .style('fill',function(d,i){ return colorScale(i); })
            .attr('width',function(d){ return 0; });


  var transit = d3.select("#word-bar-1").selectAll("rect")
              .data(mentions)
              .transition()
              .duration(1000)
              .attr("width", function(d) {return xscale(d); });

  var transitext = d3.select('#bars')
            .selectAll('text')
            .data(mentions)
            .enter()
            .append('text')
            .attr({'x':function(d) {return xscale(d)-25; },'y':function(d,i){ return yscale(i)+35; }})
            .text(function(d){ return d; }).style({'fill':'#fff','font-size':'14px'});
});
</script>
